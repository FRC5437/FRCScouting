<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.frc836.yearly.AutoMatchFragment">

    <TextView
        android:id="@+id/autoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/auto_input_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/crossBaselineC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/autoTextView"
        android:gravity="center"
        android:text="@string/cross_baseline_match" />

    <CheckBox
        android:id="@+id/dumpHopperC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/dump_hopper_match" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/crossBaselineC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rightAutoMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageSwitcher
                    android:id="@+id/rightAirshipTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="-1">

                    <LinearLayout
                        android:id="@+id/rightRightGearBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        android:orientation="vertical"
                        android:padding="30sp"
                        android:scaleX="-1">


                        <Spinner
                            android:id="@+id/rightRightGearCount"
                            style="@style/SpinnerAsEditTextHalfAlpha"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:entries="@array/numbers" />

                        <Button
                            android:id="@+id/rightRightGearB"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/normal_plus" />


                    </LinearLayout>

                </ImageSwitcher>

                <ImageSwitcher
                    android:id="@+id/rightAirshipMid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/rightCenterGearBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:baselineAligned="false"
                        android:orientation="vertical"
                        android:padding="30sp">


                        <Spinner
                            android:id="@+id/rightCenterGearCount"
                            style="@style/SpinnerAsEditTextHalfAlpha"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:entries="@array/numbers" />

                        <Button
                            android:id="@+id/rightCenterGearB"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/normal_plus" />


                    </LinearLayout>
                </ImageSwitcher>

                <ImageSwitcher
                    android:id="@+id/rightAirshipBot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="-1"
                    android:scaleY="-1">

                    <LinearLayout
                        android:id="@+id/rightLeftGearBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        android:orientation="vertical"
                        android:padding="30sp"
                        android:scaleX="-1"
                        android:scaleY="-1">


                        <Spinner
                            android:id="@+id/rightLeftGearCount"
                            style="@style/SpinnerAsEditTextHalfAlpha"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:entries="@array/numbers" />

                        <Button
                            android:id="@+id/rightLeftGearB"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/normal_plus" />


                    </LinearLayout>
                </ImageSwitcher>

            </LinearLayout>
            <!-- rightAutoMatch layout -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/highGoalBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/scoreHighCount"
                            style="@style/SpinnerAsEditTextHalfAlpha"
                            android:layout_width="90sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:entries="@array/numbers"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/scoreHighB"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="10sp"
                                android:text="@string/score_plus_1" />

                            <Button
                                android:id="@+id/scoreHigh5B"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/score_plus_5" />
                        </LinearLayout>

                        <Spinner
                            android:id="@+id/missHighCount"
                            style="@style/SpinnerAsEditTextHalfAlpha"
                            android:layout_width="90sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20sp"
                            android:entries="@array/numbers"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/missHighB"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="10sp"
                                android:text="@string/miss_plus_1"
                                android:textSize="10sp" />

                            <Button
                                android:id="@+id/missHigh5B"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/miss_plus_5"
                                android:textSize="10sp" />
                        </LinearLayout>


                    </LinearLayout>

                </ImageSwitcher>

                <ImageSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lowGoalBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/scoreLowCount"
                            style="@style/SpinnerAsEditTextHalfAlpha"
                            android:layout_width="90sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:entries="@array/numbers"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/scoreLowB"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="10sp"
                                android:text="@string/score_plus_1" />

                            <Button
                                android:id="@+id/scoreLow5B"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/score_plus_5" />
                        </LinearLayout>


                    </LinearLayout>
                </ImageSwitcher>

            </LinearLayout>
            <!-- boiler layout -->

            <LinearLayout
                android:id="@+id/leftAutoMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageSwitcher
                    android:id="@+id/leftAirshipTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/leftLeftGearBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        android:orientation="vertical"
                        android:padding="30sp">


                        <Spinner
                            android:id="@+id/leftLeftGearCount"
                            style="@style/SpinnerAsEditTextHalfAlpha"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:entries="@array/numbers" />

                        <Button
                            android:id="@+id/leftLeftGearB"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/normal_plus" />


                    </LinearLayout>

                </ImageSwitcher>

                <ImageSwitcher
                    android:id="@+id/leftAirshipMid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/leftCenterGearBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|left"
                        android:baselineAligned="false"
                        android:orientation="vertical"
                        android:padding="30sp">


                        <Spinner
                            android:id="@+id/leftCenterGearCount"
                            style="@style/SpinnerAsEditTextHalfAlpha"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:entries="@array/numbers" />

                        <Button
                            android:id="@+id/leftCenterGearB"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/normal_plus" />


                    </LinearLayout>
                </ImageSwitcher>

                <ImageSwitcher
                    android:id="@+id/leftAirshipBot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleY="-1">

                    <LinearLayout
                        android:id="@+id/leftRightGearBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        android:orientation="vertical"
                        android:padding="30sp"
                        android:scaleY="-1">


                        <Spinner
                            android:id="@+id/leftRightGearCount"
                            style="@style/SpinnerAsEditTextHalfAlpha"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:entries="@array/numbers" />

                        <Button
                            android:id="@+id/leftRightGearB"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/normal_plus" />


                    </LinearLayout>
                </ImageSwitcher>

            </LinearLayout>
            <!-- leftAutoMatch layout -->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>